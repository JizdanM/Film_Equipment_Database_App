<Window x:Class="DatabaseTest.addCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseTest"
        mc:Ignorable="d"
        Title="addCategory" Height="154" Width="297" ResizeMode="NoResize" Icon="database_light.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <Label Content="Denumirea categoriei" HorizontalAlignment="Left" Margin="23,14,0,0" VerticalAlignment="Top" Width="199" FontFamily="Microsoft Sans Serif" FontWeight="Bold" FontSize="16" Height="28"/>
        <TextBox x:Name="txtCategory" HorizontalAlignment="Left" Margin="22,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" FontFamily="Microsoft Sans Serif" FontSize="18" Height="25"/>

        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="201,0,0,0" VerticalAlignment="Center" Height="25" Width="68" FontFamily="Microsoft Sans Serif" FontWeight="Bold" FontSize="16" Click="btnAddCategory_Click" Grid.Row="1"/>

    </Grid>
</Window>
